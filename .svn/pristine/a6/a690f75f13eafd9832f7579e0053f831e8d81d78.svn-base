<?page title="New WMS" contentType="text/html;charset=UTF-8"?>
<?init class="com.trio.util.Interceptors" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<?link rel="shortcut icon" href="/image/favicon.ico" type="image/x-icon"?>

<zk>
	<window id="dealerDiv" title="Master Area Penjualan"
		apply="com.trio.view.ctrl.DtlAreaDealersCtrl">
		
		<style dynamic="true">
			.mydb-disd {
			    color: black !important; cursor: default !important; opacity: .6; -moz-opacity: .6; filter: alpha(opacity=60);   
			       
			}
			.mydb-disd * {
			    color: black !important; cursor: default !important;   
			       
			}
			.mydb {
			    background: white;   
			    border: 1px solid #7F9DB9;   
			}
			.mydb-focus, .mydb-focus input {
			    border: 1px solid red;   
			}
			.mydb-text-invalid {
			    background: yellow;   
			    border: 1px solid red;   
			}
			.mydb-readonly, .mydb-text-disd {
			    background: white;   
			}
			</style>
		
		<div>
			<vbox>
				<grid id="editDealerGrid" width="100%">
					<auxhead>
						<auxheader colspan="2" />
					</auxhead>
					<columns visible="false">
						<column width="120px" />
						<column width="300px" />
						<column width="100px" />
					</columns>
					<rows>
						<row>
							<cell width="250">Kode Dealer</cell>
							<cell>
								<textbox id="kdDlr" cols="6"
									value="@{dealerDiv$composer.dealer.kdDlr}" onChange="self.setValue(self.getValue().toUpperCase().trim());" />
							</cell>
							<cell width="100">
								<button id="LOV" label="LOV"
									onClick="popDealer.open(self)"
									image="/image/iconcrud/btn_lov.gif" />
							</cell>
						</row>
						<row>
							<cell width="250">Kabupaten/Kota</cell>
							<cell>
								<textbox id="kdKotKab" cols="20" zclass="mydb" disabled="true" />
							</cell>
							<cell width="100">
								<button id="LOV3" label="LOV"
									onClick="popKabupaten.open(self)"
									image="/image/iconcrud/btn_lov.gif" disabled="true" />
							</cell>
						</row>
						<row>
							<cell width="250">Kode Kecamatan</cell>
							<cell>
								<textbox id="kdKec" cols="6"
									value="@{dealerDiv$composer.dealer.kdKec}" zclass="mydb" disabled="true" />
								<label id="lblKecamatan" />	
							</cell>
							<cell width="100">
								<button id="LOV2" label="LOV"
									onClick="popKecamatan.open(self)"
									image="/image/iconcrud/btn_lov.gif" disabled="true" />
							</cell>
						</row>
						<row>
							<cell width="250">Status</cell>
							<cell>
								 <radiogroup id="radioStatus" value="@{dealerDiv$composer.dealer.status}">
									<radio id="r1" label="Aktif"
										value="A" checked="true" />
									<radio id="r2" label="Tidak Aktif"
										value="X" />
								</radiogroup>
							</cell>
						</row>
						<row>
							<cell colspan="4" align="left">
								<button id="createDealer" label="Simpan"
									image="/image/iconcrud/btn_save.gif" />
								<space spacing="10px" />
								<button id="resetDealer"
									label="Bersihkan" image="/image/iconcrud/btn_reset.gif" />
								<button id="searchDealer" label="Cari"
									image="/image/iconcrud/btn_search.gif" />
							</cell>
						</row>
					</rows>
				</grid>
				
				<listbox id="dealerList" width="100%" height="350px"
					mold="paging" pageSize="10">
					<listhead>
						<listheader width="200px" label="Kota / Kab"
							sort="auto(trioH100Kecamatans.kota)" />
						<listheader width="100px" label="Kode Dealer"
							sort="auto(kdDlr)" />
						<listheader width="200px" label="Kode Kecamatan"
							sort="auto(kdKec)" />
						<listheader width="200px" label="Kecamatan"
							sort="auto(trioH100Kecamatans.kecamatan)" />
						<listheader width="100px" label="Status"
							sort="auto(status)" />
					</listhead>
				</listbox>

			</vbox>
		</div>

		<!-- LOV AREA -->
		<popup id="popDealer">
			<hbox align="center">
				<textbox id="dealerBoxLov" mold="rounded" value="" />
				<button id="dealerButtonLov" label="Search"
					image="/image/search.png" mold="trendy" />
			</hbox>
			<div style="margin-top: 10px;">
				<listbox id="popDealerList" width="650px" height="350px"
					mold="paging" pageSize="10">
					<listhead style="margin-top">
						<listheader width="100px" label="Kode Dealer"
							sort="auto(kdDlr)" />
						<listheader width="200px" label="Nama Dealer"
							sort="auto(dlrNama)" />
						<listheader width="350px" label="Alamat"
							sort="auto(dlrAlamat1)" />
					</listhead>
				</listbox>
			</div>
		</popup>

		<popup id="popKecamatan">
			<hbox>
				<textbox id="kecBoxLov" mold="rounded" />
				<button id="kecButtonLov" label="Search" image="/image/search.png"
					mold="trendy" />
			</hbox>

			<div style="margin-top: 10px;">
				<listbox id="popKecamatanList" width="650px"
					height="350px" mold="paging" pageSize="10">
					<listhead>
						<listheader width="120px" label="Kode Kecamatan"
							sort="auto(kdKec)" />
						<listheader width="200px" label="Kecamatan"
							sort="auto(kecamatan)" />
						<listheader width="330px" label="Kota"
							sort="auto(kota)" />
					</listhead>
				</listbox>
			</div>
		</popup>
		
		<popup id="popKabupaten">
			<hbox>
				<textbox id="propBoxLov" mold="rounded" />
				<button id="propButtonLov" label="Search" image="/image/search.png"
					mold="trendy" />
			</hbox>
			<div style="margin-top: 10px;">
				<listbox id="popKabupatenList" width="650px"
					height="350px" mold="paging" pageSize="10">
					<listhead>
						<listheader width="120px" label="Kode Kota/Kab"
							sort="auto(kdKec)" />
						<listheader width="200px" label="Kota/Kab"
							sort="auto(kecamatan)" />
					</listhead>
				</listbox>
			</div>
		</popup>
		
		<!-- END OF LOV AREA -->

	</window>
</zk>