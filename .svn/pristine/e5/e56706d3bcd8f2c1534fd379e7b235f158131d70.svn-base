<?page title="New WMS" contentType="text/html;charset=UTF-8"?>
<?init class="com.trio.util.Interceptors" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<?link rel="shortcut icon" href="/image/favicon.ico" type="image/x-icon"?>

<zk>
	<window id="win" title="Master Role Access">
	
	<style dynamic="true">
			.mydb-disd {
			    color: black !important; cursor: default !important; opacity: .6; -moz-opacity: .6; filter: alpha(opacity=60);   
			}
			.mydb-disd * {
			    color: black !important; cursor: default !important;   
			}
			
	</style>
	
	<div id="roleDiv" apply="com.trio.view.ctrl.RoleAccessCtrl">
		<vbox>
			<grid id="editRoleGrid" width="100%">
				<auxhead>
					<auxheader />
				</auxhead>
				<columns visible="false">
					<column width="100px" />
					<column width="200px" />
					<column width="100px" />
				</columns>
				<rows>
					<row>
						<cell width="100">Id Role</cell>
						<cell><textbox  zclass="mydb" disabled="true" maxlength="30" cols="15" value="@{roleDiv$composer.role.vroleid}" /></cell>
						<cell><button id="btLOVRole" label="LOV" image="/image/iconcrud/btn_lov.gif" /></cell>
					</row>
					<row>
						<cell width="200">Id Menu</cell>
						<cell><textbox zclass="mydb" disabled="true"  maxlength="50" cols="15" value="@{roleDiv$composer.role.vmenuid}" /></cell>
						<cell><button id="btLOVMenu" label="LOV" image="/image/iconcrud/btn_lov.gif" /></cell>
					</row>
					
					<row>
							<cell width="250">Status</cell>
							<cell>
								 <radiogroup id="radioStatus" value="@{roleDiv$composer.role.vstatus}">
									<radio id="r1" label="Aktif"
										value="A" checked="true" />
									<radio id="r2" label="Tidak Aktif"
										value="X" />
								</radiogroup>
							</cell>
							<cell />
						</row>
					<row>
						<cell colspan="4" align="left">
							<button id="createRole" label="Simpan" image="/image/iconcrud/btn_save.gif" /><space spacing="10px"/>
							<button id="resetRole" label="Bersihkan" image="/image/iconcrud/btn_reset.gif" />
							<button id="searchRole" label="Cari" image="/image/iconcrud/btn_search.gif" />
						</cell>
					</row>
				</rows>
			</grid>

			<listbox id="roleList" width="100%" height="350px" mold="paging" pageSize="10">
				<listhead>
					<listheader width="200px" label="Id Role" sort="auto(vroleid)" />
					<listheader width="150px" label="Id Menu" sort="auto(vmenuid)" />
					<listheader width="100px" label="Status" sort="auto(vstatus)" />
				</listhead>
			</listbox>
			
		</vbox>
	</div>
	</window>
</zk>