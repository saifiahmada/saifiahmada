<?page title="New WMS" contentType="text/html;charset=UTF-8"?>
<?init class="com.trio.util.Interceptors" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<?link rel="shortcut icon" href="/image/favicon.ico" type="image/x-icon"?>

<zk>
	<window id="win" title="Monitoring dan Approval Pelanggaran Wilayah"
		apply="com.trio.view.ctrl.PelangwilCtrl">
		<div>
			<vbox>
				<label id="lblNoApproval" />
				<grid id="editDealerGrid" width="600px">
					<auxhead>
						<auxheader colspan="2" />
					</auxhead>
					<columns visible="false">
						<column width="250px" />
						<column width="250px" />
						<column width="100px" />
					</columns>
					<rows>

						<row>
							<cell width="250">Kode Dealer</cell>
							<cell>
								<textbox id="kdDlr" cols="6"
									value="@{win$composer.dealer.kdDlr}" />
							</cell>
							<cell width="100">
								<button id="LOV" label="LOV"
									onClick="popDealer
							.open(self)" mold="trendy" image="/image/search.png"/>
							</cell>
						</row>

						<row>
							<cell width="250">Status</cell>
							<cell>
								<radiogroup id="radioApprove">
									<radio id="r1" label="Belum"
										value="A" checked="true" />
									<radio id="r2" label="Sudah"
										value="B" />
								</radiogroup>
							</cell>
						</row>

						<row>
							<cell />
							<cell align="left">
								<button id="tampil" label="Tampilkan" image="/image/tampil.png" mold="trendy" />
							</cell>
							<cell />
						</row>
					</rows>

				</grid>
				<separator />
				<listbox id="stDetailList" width="100%" height="380px"
					mold="paging" pageSize="10">
					<listhead>
						<listheader width="100" label="Nomer Mesin"
							sort="auto(noMesin)" />
						<listheader width="200" label="Nama Dealer"
							sort="auto(kdDlr)" />
						<listheader width="200" label="Nama Konsumen"
							sort="auto(namaKonsumen)" />
						<listheader width="200" label="Alamat"
							sort="auto(customer.alamat1)" />
						<listheader width="200" label="Nilai Pw Config" />
						<listheader width="200" label="No Approval"
							sort="auto(noApprovalPw)" />
						<listheader width="200" label="Approved By"
							sort="auto(approvedBy)" />
						<listheader width="200" label="Tgl Tagih"
							sort="auto(tglTagih)" />
						<listheader width="200" label="Tgl Lunas"
							sort="auto(tglLunas)" />
						<listheader width="200" label="Nilai Pw" />
						<listheader width="200" label="Check" />
					</listhead>
				</listbox>
				<hbox>
					<button id="simpan" label="Simpan" image="/image/iconcrud/btn_save.gif" mold="trendy" />
					<space spacing="10px" />
					<button id="reset" label="Bersihkan" image="/image/iconcrud/btn_reset.gif" mold="trendy" />
					<button id="close" label="Keluar" image="/image/iconcrud/btn_exit.gif" mold="trendy" />
				</hbox>
			</vbox>
		</div>

		<!-- LOV AREA -->
		<popup id="popDealer" width="50%">
			<vbox>
				<hbox align="center" width="100%">
					<textbox id="popKdDlr"
						value="@{popDealer$composer.popObject.dlrNama}" mold="rounded" />
					<button id="popSearch" label="Search" mold="trendy" 
					image="/image/search.png" />
				</hbox>
				<listbox id="popDealerList" width="100%" height="350px"
					mold="paging" pageSize="10">
					<listhead>
						<listheader width="100px" label="Kode Dealer"
							sort="auto(kdDlr)" />
						<listheader width="200px" label="Nama Dealer"
							sort="auto(dlrNama)" />
						<listheader width="350px" label="Alamat"
							sort="auto(dlrAlamat1)" />
					</listhead>
				</listbox>
			</vbox>
		</popup>
		<!-- END OF LOV AREA -->

	</window>
</zk>