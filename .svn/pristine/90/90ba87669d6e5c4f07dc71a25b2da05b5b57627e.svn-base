<?page title="New WMS" contentType="text/html;charset=UTF-8"?>
<?init class="com.trio.util.Interceptors" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<?link rel="shortcut icon" href="/image/favicon.ico" type="image/x-icon"?>

<?page title="Ganti No Mesin Picklist" contentType="text/html;charset=UTF-8"?>
<zk>
	<style>
		.z-textbox-disd {
        background:transparent;
        color: black !important;
    }
	</style>
<window id="win" title="Ganti No Mesin Picklist" border="normal" apply="com.trio.view.ctrl.GantiNoMesinPickList">
	<vbox>
		<grid id="grid">
			<columns visible="false">
				<column width="100px"/>
				<column width="200px"/>
				<column width="100px"/>
				
			</columns>
			<rows>
				<row>
					<cell width="100px">No Picklist</cell>	
					<cell width="200px"><textbox id="tbNoPicklist" cols="20" disabled="true" /></cell>
					<cell width="100px"><button id="btnLOV" label="LOV" onClick="popup.open(self)" image="/image/iconcrud/btn_lov.gif" /></cell>
				</row>
				<row>
					<cell width="100px">No DO</cell>	
					<cell width="200px"><textbox id="tbNodo" cols="20" disabled="true" /></cell>
					<cell width="100px"></cell>
				</row>
				<row>
					<cell width="100px">Nama Dealer</cell>	
					<cell width="200px"><textbox id="tbNamaDealer" cols="20" disabled="true" /></cell>
					<cell width="100px"></cell>
				</row>
				<row>
					<cell width="100px"></cell>	
					<cell width="200px"><button id="btnTampil" label="Tampilkan" image="/image/iconcrud/btn_display.gif" /></cell>
					<cell width="100px"></cell>
				</row>
			</rows>
		</grid>
	
	<separator />
	
	<listbox  id="lbDtlpicklist" mold="paging" pageSize="10">
		<listhead>
		
			<listheader label="No Mesin Asal" sort="auto(vnomesin)" />
			<listheader label="Kd Item" sort="auto(hondaH000Items.kdItem)" />
			<listheader label="Lokasi Asal" sort="auto(vsel)" />
			<listheader label="Date Pick" sort="auto" />
			
			<listheader label="No Mesin Baru" sort="auto" />
			<listheader label="Lokasi" sort="auto" />
			<listheader label="Pilih" sort="auto" />
		</listhead>
	</listbox>
	<hbox><button id="btnSimpan" label="Simpan" image="/image/iconcrud/btn_save.gif" />
		  <button id="btnReset" label="Bersihkan" image="/image/iconcrud/btn_reset.gif" />
		  <button id="btnResetDetail" label="Bersihkan Detail" image="/image/iconcrud/btn_reset.gif" />
	</hbox>
</vbox>
	
	<!-- area popup -->
		
	<popup id="popup" width="500px">
		<vbox>
		<grid>
			<columns>
				<column label=""/>
				<column label=""/>
			</columns>
			<rows>
				<row>
					<cell>No Picklist</cell>
					<cell><textbox id="popTbNoPicklis" /></cell>	
				</row>
				<row>
					<cell>No DO</cell>
					<cell><textbox id="popTbNoDO" /></cell>	
				</row>
				<row>
					<cell>Nama Dealer</cell>
					<cell><textbox id="popTbNamaDealer" /></cell>	
				</row>
				<row>
					<cell colspan="2">
						<button id="popBtnCari" label="Cari" image="/image/iconcrud/btn_search.gif" />
						<button id="popBtnReset" label="Reset" image="/image/iconcrud/btn_reset.gif" />
					</cell>
				</row>
			</rows>
		</grid>
		<separator />
			<listbox id="lbPickList" width="480px" height="350px" mold="paging" pageSize="10">
				<listhead>	
					<listheader width="150px" label="No Picklist" sort="auto(vnopicklist)" />
					<listheader width="150px" label="No DO" sort="auto(hondaH100Fakdos.noDo)" />
					<listheader width="150px" label="Nama Dealer" sort="auto(hondaH100Fakdos.hondaH000Dealers.dlrNama)" />
				</listhead>
			</listbox>

		</vbox>
	</popup>
</window>
</zk>