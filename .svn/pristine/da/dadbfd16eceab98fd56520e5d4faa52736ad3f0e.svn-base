<?page title="New WMS" contentType="text/html;charset=UTF-8"?>
<?init class="com.trio.util.Interceptors" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<?link rel="shortcut icon" href="/image/favicon.ico" type="image/x-icon"?>

<zk>
	<window title="Master Menu">
	<div id="menuDiv" apply="com.trio.view.ctrl.MenuCtrl">
		<vbox>
			<grid id="editMenuGrid" width="100%">
				<auxhead>
					<auxheader />
				</auxhead>
				<columns visible="false">
					<column width="100px" />
					<column width="400px" />
				</columns>
				<rows>
					<row>
						<cell width="100">Kode Menu</cell>
						<cell><textbox maxlength="30" cols="30" value="@{menuDiv$composer.menu.vmenuid}" /></cell>
					</row>
					<row>
						<cell width="200">Judul Menu</cell>
						<cell><textbox maxlength="50" cols="50" value="@{menuDiv$composer.menu.vtitle}" /></cell>
					</row>
					
					<row>
						<cell width="350">Parent Menu</cell>
						<cell><combobox id="cbVparent" cols="10" readonly="true" value="@{menuDiv$composer.menu.vparent}">
									<comboitem id="ci1" label="M1PMT" />
									<comboitem id="ci2" label="M2MKT" />
									<comboitem id="ci3" label="M3MGD" />
									<comboitem id="ci4" label="M4SBP" />
									<comboitem id="ci5" label="M5FNC" />
									<comboitem id="ci6" label="M6LAP" />
									<comboitem id="ci7" label="M7MST" />				
							</combobox></cell>
					</row>
					
					<row>
						<cell width="150">Lokasi Menu</cell>
						<cell><textbox maxlength="30" cols="30" value="@{menuDiv$composer.menu.vlocation}" /></cell>
					</row>
					<row>
						<cell width="150">Image Menu</cell>
						<cell><textbox maxlength="30" cols="30" value="@{menuDiv$composer.menu.vimage}" /></cell>
					</row>
					<row>
						<cell width="150">Orderer</cell>
						<cell><intbox maxlength="3" cols="30" value="@{menuDiv$composer.menu.norderer}" /></cell>
					</row>
					<row>
						<cell colspan="4" align="left">
							<button id="createMenu" label="Simpan" /><space spacing="10px"/>
							
							<button id="resetMenu" label="Bersihkan" />
							<button id="searchMenu" label="Cari" />
						</cell>
					</row>
				</rows>
			</grid>
			<separator />
			<listbox id="menuList" width="100%" height="350px" mold="paging" pageSize="10">
				<listhead>
					<listheader width="110px" label="Kode Menu" sort="auto(vmenuid)" />
					<listheader width="300px" label="Judul Menu" sort="auto(vtitle)" />
					<listheader width="150px" label="Parent" sort="auto(vparent)" />
					<listheader width="150px" label="Lokasi" sort="auto(vlocation)" />
					<listheader width="150px" label="Image" sort="auto(vimage)" />
					<listheader width="150px" label="Orderer" sort="auto(norderer)" />
				</listhead>
			</listbox>
			
		</vbox>
	</div>
	</window>
</zk>