<?page title="New WMS" contentType="text/html;charset=UTF-8"?>
<?init class="com.trio.util.Interceptors" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<?link rel="shortcut icon" href="/image/favicon.ico" type="image/x-icon"?>

<zk>
	<window title="Master Kecamatan">
	<div id="kecamatanDiv" apply="com.trio.view.ctrl.KecamatanCtrl">
		<vbox>
			<grid id="editKecamatanGrid" width="100%">
				<auxhead>
					<auxheader colspan="2" label="Master Kecamatan" />
				</auxhead>
				<columns visible="false">
					<column width="100px" />
					<column width="200px" />
					<column width="350px" />
				</columns>
				<rows>
					<row>
						<cell width="150">Kode Kecamatan</cell>
						<cell><textbox cols="6" value="@{kecamatanDiv$composer.kecamatan.kdKec}" /></cell>
					</row>
					<row>
						<cell width="150">Nama Kecamatan</cell>
						<cell><textbox cols="30" value="@{kecamatanDiv$composer.kecamatan.kecamatan}" /></cell>
					</row>
					<row>
						<cell width="150">Kota</cell>
						<cell><textbox cols="50" value="@{kecamatanDiv$composer.kecamatan.kota}" /></cell>
					</row>
					<row>
						<cell colspan="4" align="left">
							<button id="createKecamatan" label="Simpan" /><space spacing="10px"/>
							<button id="updateKecamatan" label="Update" disabled="true"/><space spacing="10px"/>
							<button id="deleteKecamatan" label="Hapus" disabled="true"/>
							<button id="resetKecamatan" label="Bersihkan" />
							<button id="searchKecamatan" label="Cari" />
						</cell>
					</row>
				</rows>
			</grid>
			<separator />
			<listbox id="kecamatanList" width="100%" height="350px" mold="paging" pageSize="10">
				<listhead>
					<listheader width="100px" label="Kode Kecamatan" sort="auto(kdKec)" />
					<listheader width="200px" label="Nama Kecamatan" sort="auto(kecamatan)" />
					<listheader width="350px" label="Alamat" sort="auto(kota)" />
				</listhead>
			</listbox>
			
		</vbox>
	</div>
	</window>
</zk>